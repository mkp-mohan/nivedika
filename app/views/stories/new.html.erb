<h1>New Story</h1>
<p>Find me in app/views/stories/new.html.erb</p>

<%= form_for :story,url: stories_path do |f| %>
    <% if @story.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@story.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @story.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :summary %><br>
      <%= f.text_field :summary %>
    </p>

    <p>
      <%= f.label :status %><br>
      <%= f.text_field :status %>
    </p>
    <p>
      <%= f.label :fix_version %><br>
      <%= f.text_field :fix_version %>
    </p>
    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
<%= link_to 'Back', stories_path %>
